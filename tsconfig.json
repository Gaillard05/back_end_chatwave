{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictPropertyInitialization": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "target": "ES2018",
      "moduleResolution": "node",
      "outDir": "./dist",
      "baseUrl": "./",
      "incremental": true,
      "paths": {
        "*": [
          "node_modules/*"
        ]
      }
    },
    "exclude": [
      "node_modules",
      "dist"
    ]
}  